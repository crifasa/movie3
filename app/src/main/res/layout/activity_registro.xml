<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal"
    android:background="@color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="atras"
        android:src="@mipmap/cancel"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="¿Quieres empezar ya?"
        android:textColor="#050505"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Llena todos los campos para crear una cuenta en C MOVIES"
        android:textColor="#939292"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom4"
        android:hint="Nombre"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:textColorHint="#8F8E8E"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom4"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:textColorHint="#8F8E8E"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/et2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom4"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="#8F8E8E"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom4"
        android:hint="Confirme Contraseña"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="#8F8E8E"
        android:textSize="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="#F80707"
        android:onClick="confirmar"
        android:text="Comienza ya"
        android:textColor="@color/white"
        tools:ignore="OnClick" />


</RelativeLayout>